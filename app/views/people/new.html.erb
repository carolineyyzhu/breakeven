<h2>Add a person:</h2>

<% if @person.errors.any? %>
  <h2><%= pluralize(@person.errors.count, "error") %>
    are causing issues: </h2>
  <ul>
    <%= @person.errors.full_messages.each do |error| %>
    <li><%= error %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @person do |form|%>
  <%= form.text_field :name %>
  <%= form.submit %>
<% end %>
