<div class = "headerbg">
<h2>People:</h2>
</div>

<table>
  <tr>
    <th>Name</th>
    <th colspan="3"></th>
  </tr>
<% @people.each do |person| %>
  <tr>
    <td><%= person.name %></td>
    <td><button><%= link_to "Delete this person", person_path(person), method: :delete, data: {confirm: "Are you sure?"} %></button></td>
    <td><button><%= link_to "Edit name", edit_person_path(person) %></button></td>
    <td><button><%= link_to "Add new payment", new_person_payment_path(person)%></button></td>
  </tr>
<% end %>
</table>

<button><%= link_to "Add new person", new_person_path(@person) %></button>
<div>
  <ul>
      <% @people.each do |person| %>
      <li><%= link_to "See all of ".concat(person.name).concat("'s payments"), person_payments_url(person) %></li>
      <% end %>
    </ul>
</div>

<p>
  <%= link_to "Back", :back %>
</p>
