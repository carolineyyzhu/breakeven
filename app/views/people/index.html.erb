<h2>People:</h2>

<table>
  <tr>
    <th>Name</th>
    <th colspan="1"></th>
  </tr>
<%= @people.each do |person| %>
  <tr>
    <td><%= person.name %></td>
    <td><%= link_to "Add new payment", controller = 'payment' %></td>
  </tr>
<% end %>
</table>

<%= link_to "Add new person", new_person_path(@person) %>
