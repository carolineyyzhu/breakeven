<%= form_with scope: :person, url: people_path, local:true do |form|%>
  <% if @person.errors.any? %>
    <div id = "error_explanation">
      <h2><%= pluralize(@person.errors.count, "error") %>
        are causing issues: </h2>
      <ul>
        <%= @person.errors.full_messages.each do |error| %>
        <li><%= error %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <p>
    <%= form.label :name %>:<br>
    <%= form.text_field :name %>
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>
